{
  "name": "front-to-gmail-migration",
  "version": "1.0.0",
  "description": "Migration script to sync Front labels and archive status to Gmail",
  "main": "electron/main.js",
  "scripts": {
    "build": "tsc",
    "electron": "npm run build && npx electron electron/main.js",
    "pack": "npm run build && npm prune --production && npx electron-builder --dir",
    "dist": "npm run build && npm prune --production && npx electron-builder",
    "dist:mac": "npm run build && npm prune --production && npx electron-builder --mac",
    "dist:win": "npm run build && npm prune --production && npx electron-builder --win",
    "dist:linux": "npm run build && npm prune --production && npx electron-builder --linux"
  },
  "keywords": ["front", "gmail", "migration", "email"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.0",
    "googleapis": "^144.0.0",
    "axios": "^1.7.9",
    "dotenv": "^16.4.5",
    "p-limit": "^3.1.0",
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "electron": "^38.1.0",
    "electron-builder": "^24.6.0",
    "@electron/notarize": "^2.3.0"
  },
  "build": {
    "appId": "com.example.front-to-gmail-migration",
    "productName": "Front to Gmail Migration",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "electron"
    },
    "asar": true,
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "icon": "electron/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.inherit.plist"
    },
    "win": {
      "target": ["nsis"],
      "icon": "electron/logo.png"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility",
      "icon": "electron/logo.png"
    },
    "afterSign": "scripts/notarize.js",
    "afterAllArtifactBuild": "scripts/staple.js"
  }
}
